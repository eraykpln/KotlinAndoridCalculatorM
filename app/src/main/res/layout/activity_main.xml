<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="404dp"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/num1"
            android:layout_width="159dp"
            android:layout_height="56dp"
            android:cursorVisible="true"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="number" />

        <EditText
            android:id="@+id/num2"
            android:layout_width="156dp"
            android:layout_height="65dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="number" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="257dp"
            android:layout_height="94dp"
            android:gravity="center"
            android:text="@string/result"
            android:textSize="24sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/sumBut"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/toplama"
                tools:ignore="UsingOnClickInXml" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="Substraction img button for onClick()"
                android:onClick="Sub"
                app:srcCompat="@drawable/cikarma"
                tools:ignore="UsingOnClickInXml" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="Multiplying img button for onClick()"
                android:onClick="Multiply"
                app:srcCompat="@drawable/carpma"
                tools:ignore="UsingOnClickInXml" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="Dividing img button for onClick()"
                android:onClick="Div"
                app:srcCompat="@drawable/bolme"
                tools:ignore="UsingOnClickInXml" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>